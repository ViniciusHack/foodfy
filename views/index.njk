{% extends "layout.njk"%}

{%block head%}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/main.css">
    <link rel="stylesheet" href="/header.css">
    <title>Foodfy</title>
    {%endblock%}

    {%block header%}
        <header id="header-home">

            <a href="/"><img src="/logo.png" alt="Logo Foodfy"></a>
            <nav>
                <ul>
                    <li>
                        <a href="/sobre">Sobre</a>
                    </li>
                    <li>
                        <a href="/receitas">Receitas</a>
                    </li>
                </ul>
            </nav>

        </header>
        {%endblock%}

        {%block content%}

            <main>

                <section class="banner">
                    <div class="text">
                        <h2>As melhores receitas</h2>
                        <p>Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.</p>
                    </div>
                    <!--text-->
                    <div class="image"><img src="/chef.png" alt="Chef"></div>
                    <!--image-->
                </section>
                <!--banner-->

                <section class="featured-recipes">
                    <h1>Mais acessadas</h1>
                    <div class="grid-recipes">

                        {%for item in items%}

                            <a href="/recipes/{{item.id}}">
                                <div class="recipe" id="{{item.id}}">
                                    <img src="{{item.image}}" alt="{{item.alt}}"/>
                                    <h4>{{item.title}}</h4>
                                    <p>por
                                        {{item.author}}</p>
                                </div>
                            </a>

                            {%endfor%}

                        </div>
                        <!--grid-recipes-->
                    </section>
                    <!--featured-recipes-->
                </main>
                {%endblock%}

                {%block footer%}

                    <footer>
                        <div class="box-footer">
                            <span>Todos direitos reservados, receitas Foodfy.</span>
                        </div>
                    </footer>

                    <script src="/script.js" defer="defer"></script>
                    {%endblock%}